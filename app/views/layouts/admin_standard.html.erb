<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="au theme template">
    <meta name="author" content="Hau Nguyen">
    <meta name="keywords" content="au theme template">

    <!-- Title Page-->
    <title>Dashboard</title>

    <!-- Init CSS JS -->
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "application", media: "all",
      "data-turbolinks-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbolinks-track":
      "reload" %>

    <!-- Fontfaces CSS-->
    <%= stylesheet_link_tag "font-face.css" %>
    <%= stylesheet_link_tag "font-awesome-4.7/css/font-awesome.min.css" %>
    <%= stylesheet_link_tag "font-awesome-5/css/fontawesome-all.min.css" %>
    <%= stylesheet_link_tag "mdi-font/css/material-design-iconic-font.min.css" %>

    <!-- Bootstrap CSS-->
    <%= stylesheet_link_tag "bootstrap-4.1/bootstrap.min.css" %>

    <!-- Vendor CSS-->
    <%= stylesheet_link_tag "animsition/animsition.min.css" %>
    <%= stylesheet_link_tag "bootstrap-progressbar/bootstrap-progressbar-3.3.4.min.css" %>
    <%= stylesheet_link_tag "wow/animate.css" %>
    <%= stylesheet_link_tag "css-hamburgers/hamburgers.min.css" %>
    <%= stylesheet_link_tag "slick/slick.css" %>
    <%= stylesheet_link_tag "select2/select2.min.css" %>
    <%= stylesheet_link_tag "perfect-scrollbar/perfect-scrollbar.css" %>

    <!-- Main CSS-->
    <%= stylesheet_link_tag "theme.css" %>
</head>


<body class="animsition">
    <div class="page-wrapper">
        <!-- HEADER MOBILE-->
        <header class="header-mobile d-block d-lg-none">
            <div class="header-mobile__bar">
                <div class="container-fluid">
                    <div class="header-mobile-inner">
                        <a class="logo" href="#">
                            <%= image_tag("icon/logo.png", alt:"CoolAdmin") %>
                        </a>
                        <button class="hamburger hamburger--slider" type="button">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
            </div>
            <nav class="navbar-mobile">
                <div class="container-fluid">
                    <ul class="navbar-mobile__list list-unstyled">
                         <li class="has-sub">
                          <%= link_to admin_dashboard_path, class: "js-arrow" do %>
                            <i class="fas fa-tachometer-alt"></i>Overview
                          <% end %>
                        </li>
                        <li>
                            <%= link_to admin_user_data_path do %>
                              <i class="fas fa-users"></i>User_Data
                            <% end %>
                        </li>
                        <li>
                            <%= link_to admin_category_data_path do %>
                              <i class="fas fa-truck"></i>Category_Data
                            <% end %>
                        </li>
                        <li>
                            <%= link_to admin_product_data_path do %>
                              <i class="fas fa-rocket"></i>Product_Data
                            <% end %>
                        </li>
                        <li>
                            <%= link_to admin_order_data_path do %>
                              <i class="fas fa-truck"></i>Order_Data
                            <% end %>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- END HEADER MOBILE-->

        <!-- MENU SIDEBAR-->
        <aside class="menu-sidebar d-none d-lg-block">
            <div class="logo">
                <a href="#">
                    <%= image_tag("icon/logo.png", alt:"CoolAdmin") %>
                </a>
            </div>
            <div class="menu-sidebar__content js-scrollbar1">
                <nav class="navbar-sidebar">
                    <ul class="list-unstyled navbar__list">
                        <li>
                          <%= link_to admin_dashboard_path, class: "js-arrow" do %>
                            <i class="fas fa-tachometer-alt"></i>Overview
                          <% end %>
                        </li>
                        <li>
                            <%= link_to admin_user_data_path do %>
                              <i class="fas fa-users"></i>User_Data
                            <% end %>
                        </li>
                        <li>
                            <%= link_to admin_category_data_path do %>
                              <i class="fas fa-tags"></i>Category_Data
                            <% end %>
                        </li>
                        <li>
                            <%= link_to admin_product_data_path do %>
                              <i class="fas fa-truck"></i>Product_Data
                            <% end %>
                        </li>
                        <li>
                            <%= link_to admin_order_data_path do %>
                              <i class="fas fa-shopping-cart"></i>Order_Data
                            <% end %>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>
        <!-- END MENU SIDEBAR-->

        <!-- MAIN CONTENT-->
        <%= yield %>
        <!-- END MAIN CONTENT-->

    <!-- Jquery JS-->
    <%= javascript_include_tag "jquery-3.2.1.min.js" %>
    <!-- Bootstrap JS-->

    <%= javascript_include_tag "bootstrap-4.1/popper.min.js" %>
    <%= javascript_include_tag "bootstrap-4.1/bootstrap.min.js" %>
    <!-- Vendor JS       -->

    <%= javascript_include_tag "slick/slick.min.js" %>
    <%= javascript_include_tag "wow/wow.min.js" %>
    <%= javascript_include_tag "animsition/animsition.min.js" %>
    <%= javascript_include_tag  "bootstrap-progressbar/bootstrap-progressbar.min.js" %>

    <%= javascript_include_tag  "counter-up/jquery.waypoints.min.js" %>
    <%= javascript_include_tag  "counter-up/jquery.counterup.min.js" %>

    <%= javascript_include_tag  "circle-progress/circle-progress.min.js" %>
    <%= javascript_include_tag  "perfect-scrollbar/perfect-scrollbar.js" %>
    <%= javascript_include_tag  "chartjs/Chart.bundle.min.js" %>
    <%= javascript_include_tag  "select2/select2.min.js" %>


    <!-- Main JS-->
    <%= javascript_include_tag  "main.js" %>
</body>

</html>
<!-- end document-->
