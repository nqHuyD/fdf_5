<div class="tab-2 resp-tab-content" aria-labelledby="tab_item-1">
  <div class="facts">
    <div class="register">
       <%= form_for :user, url: signup_path, remote: true do |f| %>
        <div class="errorsform errors-signup-form">
        </div>
        <%= f.label :name, t("layouts.user_login.signupform.name") %>
        <%= f.text_field :name, placeholder: t("layouts.user_login.placeholder.name") %>

        <%= f.label :password, t("layouts.user_login.signupform.pass") %>
        <%= f.password_field :password, placeholder: t("layouts.user_login.placeholder.pass") %>

        <%= f.label :password_confirmation, t("layouts.user_login.signupform.confirm") %>
        <%= f.password_field :password_confirmation, placeholder: t("layouts.user_login.placeholder.confirm")%>

        <%= f.label :email, t("layouts.user_login.signupform.email") %>
        <%= f.email_field :email, placeholder: t("layouts.user_login.placeholder.email") %>

        <%= f.label :phone, t("layouts.user_login.signupform.phone") %><br/>
        <%= f.telephone_field :phone %>

        <div class="sign-up">
          <%= f.submit t("layouts.user_login.signupform.submit") %>
        </div>
      <% end %>
      </form>
    </div>
  </div>
</div>
