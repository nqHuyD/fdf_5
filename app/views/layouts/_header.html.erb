<div class="header">
  <div class="container">
    <div class="w3l_login">
      <% if user_signed_in? %>
        <div class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            <span class="fa fa-user"></span>
          </a>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to  t("layouts.user_login.show"), edit_user_registration_path %></li>
            <li><%= link_to  t("layouts.user_login.logout"), destroy_user_session_path, method: :delete %></li>
          </ul>
        </div>
      <% else %>
        <%= link_to new_user_registration_path, class: "fa fa-user" do %>
          <span aria-hidden="true"></span>
        <% end %>
      <% end %>
    </div>
    <div class="w3l_logo">
      <h1>
        <%= link_to root_path do %>
        <%= t("layouts.header.title") %>
        <span><%= t("layouts.header.subtitle") %></span>
        <% end %>
      </h1>
    </div>
    <div class="cart box_1">
      <%= link_to cart_index_path do %>
        <div class="total cart-header">
          <span class="simpleCart_total">
            <%= t("layouts.header.priceunit", price: current_cart_total) %>
          </span>
            (<span id="simpleCart_quantity"
            class="simpleCart_quantity"><%= current_cart_length %>
            </span><%= t("layouts.header.items") %>)</div>
        <%= image_tag("header/bag.png", alt: "") %>
      <% end %>
      <div class="clearfix"> </div>
    </div>
    <div class="clearfix"> </div>
  </div>
</div>
<div class="navigation">
  <div class="container">
    <nav class="navbar navbar-default">
      <div class="navbar-header nav_2">
        <button type="button" class="navbar-toggle collapsed navbar-toggle1"
          data-toggle="collapse"
          data-target="#bs-megadropdown-tabs">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div class="collapse navbar-collapse" id="bs-megadropdown-tabs">
        <ul class="nav navbar-nav">
          <li class="active"><%= link_to t("layouts.header.home"),
            root_path, class: "act" %>
          </li>
          <!-- Mega Menu -->
          <%= render "layouts/home/mega_menu" %>
          <li><%= link_to t("layouts.header.about"), about_path %></li>
          <li><%= link_to t("layouts.header.mail"), mail_path %></li>
        </ul>
      </div>
    </nav>
  </div>
</div>

