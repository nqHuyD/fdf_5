<tr>
  <td class="pointer" data-toggle="modal" data-target="#modal_product_data_row_<%=@products.id %>">
    <%= @products.id %>
  </td>
  <td class="pointer" data-toggle="modal" data-target="#modal_product_data_row_<%=@products.id %>">
    <%= @products.name %>
  </td>
  <td class="pointer" data-toggle="modal" data-target="#modal_product_data_row_<%=@products.id %>">
    <%= label_status_product @products.status %>
  </td>
  <td class="pointer" data-toggle="modal" data-target="#modal_product_data_row_<%=@products.id %>">
     <%= t("layouts.product.related.record.priceunit", price: @products.price) %>
  </td>
  <td class="pointer" data-toggle="modal" data-target="#modal_product_data_row_<%=@products.id %>">
    <%= @products.inventory %>
  </td>
  <td>
    <div class="table-data-feature">
        <button class="item" data-toggle="modal" data-target="#tooltip_edit_product_<%= @products.id %>"
          data-placement="top" title="Edit">
            <i class="zmdi zmdi-edit"></i>
        </button>
        <button class="tooltip_destroy_product <%= @products.id %>"
          data-placement="top" title="Delete">
            <i class="zmdi zmdi-delete"></i>
        </button>
    </div>
  </td>
</tr>
<%= render partial: "modal_product_data" %>
<%= render partial: "modal_update_product" %>
