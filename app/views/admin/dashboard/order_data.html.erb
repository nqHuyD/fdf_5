<div class="page-container">
  <div class="main-content">
    <div class="section__content section__content--p30">
      <div class="container-fluid">
        <% flash.each do |message_type, message| %>
          <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
        <% end %>
        <div class="row">
          <div class="col-lg-12">
              <h3>Order Data</h3>
              <div class="table-responsive table--no-card m-b-30">
                  <table class="table table-borderless table-striped table-earning">
                      <thead>
                          <tr>
                            <th class="text-center">date</th>
                            <th class="text-center">order ID</th>
                            <th class="text-center">receiver</th>
                            <th class="text-center">Address</th>
                            <th class="text-center">Phone</th>
                            <th class="text-center">Total Price</th>
                            <th class="text-center">Status</th>
                            <th class="text-center">Processing</th>
                          </tr>
                      </thead>
                      <tbody>
                        <% @order_data.each do |orders| %>
                          <%= render_order_row orders %>
                        <% end %>
                      </tbody>
                  </table>
              </div>
            </div>
          <%= will_paginate @order_data, renderer: BootstrapPagination::Rails %>
        </div>
      </div>
    </div>
  </div>
</div>
<%=  javascript_include_tag("admin_javascript/order_admin_data.js") %>
