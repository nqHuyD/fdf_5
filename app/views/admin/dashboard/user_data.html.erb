<div class="page-container">
  <div class="main-content">
    <div class="section__content section__content--p30">
     <% flash.each do |message_type, message| %>
        <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
      <% end %>
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-8">
              <!-- USER DATA-->
              <div class="user-data m-b-30">
                  <h3 class="title-3 m-b-30">
                      <i class="zmdi zmdi-account-calendar"></i>user data</h3>
                  <div class="table-responsive table-data">
                      <table class="table">
                          <thead>
                            <tr>
                              <td>Id</td>
                              <td>name</td>
                              <td>Current Role</td>
                              <td>Role Scroll</td>
                              <td>Active status</td>
                              <td>Active Change</td>
                              <td></td>
                              <td></td>
                            </tr>
                          </thead>
                          <% @user_data.each do |users| %>
                            <%= render_user_row users %>
                          <% end %>
                      </table>
                  </div>
                  <%= will_paginate @user_data, renderer: BootstrapPagination::Rails %>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div>
<%=  javascript_include_tag("admin_javascript/user_admin_data.js") %>
