<tbody class="user_row_data_ajax_<%= users.id %>">
  <td><%= users.id %></td>
  <td>
    <div class="table-data__info">
        <h6><%= users.name %></h6>
        <span>
            <a href="#"><%= users.email %></a>
        </span>
    </div>
  </td>
  <!-- Calling Ajax when change the User Role -->
  <td class="current_role_ajax_<%= users.id %>">
    <%= label_role_user users.role %>
  </td>
  <td>
    <div class="btn-group">
      <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Role
      </button>
      <div class="dropdown-menu">
        <a class="badge badge-warning role_scroll" id="role_scroll_1 <%= users.id %>">Admin</a><br>
        <a class="badge badge-primary role_scroll" id="role_scroll_2 <%= users.id %>">Staff</a><br>
        <a class="badge badge-light role_scroll" id="role_scroll_3 <%= users.id %>">Deliver</a><br>
        <a class="badge badge-success role_scroll" id="role_scroll_4 <%= users.id %>">Customer</a>
      </div>
    </div>
  </td>
  <td>
    <button type="button" class="btn-primary btn-sm" data-toggle="modal"
      data-target="#modal_data_user_<%= users.id %>">
      <i class="fa fa-eye">
      </i> Show
    </button>
  </td>
  <td>
    <button type="button" class="btn-danger btn-sm admin-delete-users <%= users.id %>">
      <i class="fa fa-trash">
      </i> Delete
    </button>
  </td>
<%= render partial: "modal_user_data", locals: {users: users} %>
</tbody>
