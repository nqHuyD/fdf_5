<% if user_signed_in? %>
<div class="modal video-modal fade" id="order_modal" tabindex="-1" role="dialog" aria-labelledby="order_modal" >
  <div class="modal-dialog" role="document">
    <div class="modal-content modal-order-content">
      <div class="modal-header">
        <button type="button" class="close-modal-order btn btn-info"
          data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="facts">
        <div class="register order-form">
          <h1><%= t("layouts.order.cofirm") %></h1><br><br>
          <div class="notification-order"></div>
          <%= form_for :order, url: neworder_path, remote: true  do |f| %>
            <%= f.label :name, t("layouts.order.form.name") %>
            <%= f.text_field :name, placeholder: current_user.name, value: current_user.name %><br><br>

            <%= f.label :address, t("layouts.order.form.address") %>
            <%= f.text_field :address, placeholder: t("layouts.order.placeholder.address") %>
            <br><br>

            <%= f.label :phone, t("layouts.order.form.phone") %><br>
            <%= f.telephone_field :phone, placeholder: current_user.phone, value: current_user.phone %><br>

            <%= f.submit t("layouts.order.form.submit") %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
