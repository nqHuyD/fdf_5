<% rank = current_user.ranks.find_by product_id: product.id %>
<% if rank.nil? %>
  <% star = 1 %>
<% else %>
  <% star = rank.ranking %>
<% end %>
<span class="fa fa-star fachecked" id="1_<%= product.id %>_star"></span>

<% if star >= 2 %>
  <span class="fa fa-star fachecked" id="2_<%= product.id %>_star"></span>
<% else %>
  <span class="fa fa-star" id="2_<%= product.id %>_star"></span>
<% end %>

<% if star >= 3 %>
  <span class="fa fa-star fachecked" id="3_<%= product.id %>_star"></span>
<% else %>
  <span class="fa fa-star" id="3_<%= product.id %>_star"></span>
<% end %>
<% if star >= 4 %>
  <span class="fa fa-star fachecked" id="4_<%= product.id %>_star"></span>
<% else %>
  <span class="fa fa-star" id="4_<%= product.id %>_star"></span>
<% end %>
<% if star == 5 %>
  <span class="fa fa-star fachecked" id="5_<%= product.id %>_star"></span>
<% else %>
  <span class="fa fa-star" id="5_<%= product.id %>_star"></span>
<% end %>

<%= javascript_include_tag("ranking_product.js") %>
