<% check_rank product %>
<span class="fa fa-star fachecked fa_product_rank" id="1_<%= product.id %>_star"></span>

<% if @star >= 2 %>
  <span class="fa fa-star fachecked fa_product_rank" id="2_<%= product.id %>_star"></span>
<% else %>
  <span class="fa fa-star fa_product_rank" id="2_<%= product.id %>_star"></span>
<% end %>

