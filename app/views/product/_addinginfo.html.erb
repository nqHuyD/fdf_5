<div class="additional_info">
  <div class="container">
    <div class="sap_tabs">
      <div class="horizontalTab" style="display: block; width: 100%; margin: 0px;">
        <ul>
          <li class="resp-tab-item" aria-controls="tab_item-0" role="tab"><span>
           <%= t("layouts.product.single.information") %>
        </span></li>
          <li class="resp-tab-item" aria-controls="tab_item-1" role="tab"><span>
             <%= t("layouts.product.single.share") %>
          </span></li>
        </ul>
        <div class="tab-1 resp-tab-content additional_info_grid" aria-labelledby="tab_item-0">
          <h3><%= product.name %></h3>
          <p><%= product.description %></p>
        </div>
        <div class="tab-1 resp-tab-content additional_info_grid" aria-labelledby="tab_item-1">
          <%= social_share_button_tag(t("layouts.product.single.sharing", share: product.name),
            url: product_path(product), desc: product.name,
            image: "https://dienthoaididong.com/Uploads/PostImages/images/11(17).jpg") %>
        </div>
      </div>
    </div>
    <%= javascript_include_tag("easyResponsiveTabs.js") %>
  </div>
</div>
