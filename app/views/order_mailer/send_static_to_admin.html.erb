        <% @products.each do |product| %>
          <strong><%= product.name %></strong>__
        <% end %>
      </p>
      <h3><%= t("mail.endmonth.topproduct", product: @top_product.name) %></h3>
      <h3><%= t("mail.endmonth.topcategory", category: @top_category.name) %></h3>
    </p>
  </body>
</html>
